{
    "name": "statamic-rad-pack/runway",
    "description": "Eloquently manage your database models in Statamic.",
    "license": "mit",
    "authors": [
        {
            "name": "Duncan McClean",
            "email": "duncan@statamic.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "StatamicRadPack\\Runway\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "StatamicRadPack\\Runway\\Tests\\": "tests",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "extra": {
        "statamic": {
            "name": "Runway",
            "description": "Eloquently manage your database models in Statamic."
        },
        "laravel": {
            "providers": [
                "StatamicRadPack\\Runway\\ServiceProvider"
            ]
        },
        "download-dist": {
            "url": "https://github.com/statamic-rad-pack/runway/releases/download/{$version}/dist.tar.gz",
            "path": "dist"
        }
    },
    "require": {
        "php": "^8.2",
        "ajthinking/archetype": "^1.0.3 || ^2.0",
        "laravel/framework": "^10.25.0 || ^11.0",
        "laravel/prompts": "^0.1.17",
        "pixelfear/composer-dist-plugin": "^0.1.5",
        "spatie/ignition": "^1.15",
        "spatie/invade": "^2.1",
        "statamic/cms": "^5.30.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "spatie/test-time": "^1.2",
        "orchestra/testbench": "^8.0 || ^9.0",
        "phpunit/phpunit": "^10.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true,
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "alpha",
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ],
        "lint": [
            "@php vendor/bin/pint --ansi",
            "@php vendor/bin/phpstan analyse --verbose --ansi"
        ],
        "test": [
            "@php vendor/bin/phpunit"
        ]
    }
}
